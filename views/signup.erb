

<% if @name %>
  <h1>Hello <%= @name %>!</h1>
<% else %>
  <h1>Hello New User!</h1>
<% end %>

<div id="contact-form">
  <h1> Sign up to our app!</h1>
  <form method="post" action="/signup">
    <label for="name">Name: </label>
    <input type="text" id="name" name="name" value="" placeholder="Your Full Name" required="required" autofocus="autofocus"/>
    <label for="email">Email address: </label>
    <input type="email" id="email" name="email" value="" placeholder="name@example.com" required/>
    <input type="submit" value="submit" id="submit-button">
  </form>
</div>
